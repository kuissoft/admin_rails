<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-asbestos">Feedbacks</h3>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Application Feedbacks</div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>TYPE </th>
                <th>E_MAIL</th>
                <th>MESSAGE</th>
                <th>CREATED AT</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= form_tag feedbacks_path, method: :get do %>
                    <%= select_tag :feedback_type, options_for_select(['feature', 'bug', 'other'], params[:feedback_type]), prompt: 'All'%>
                  <% end -%>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <% @feedbacks.each do |feedback| %>
                <tr>
                  <td><%= feedback.feedback_type.capitalize %></td>
                  <td><%= feedback.email %></td>
                  <td><p><%= feedback.message %></p></td>
                  <td><%= l(feedback.created_at, format: "%d.%m.%Y %H:%M") %></td>
                  <td><%= link_to 'Destroy', feedback, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Web Feedbacks</div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">  <tr>
            <thead>
              <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>E-MAIL</th>
                <th>MESSAGE</th>
                <th>CREATED AT</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @web_feedbacks.each do |web_feedback| %>
                <tr>
                  <td><%= web_feedback['id'] %></td>
                  <td><%= web_feedback['name'] %></td>
                  <td><%= web_feedback['email'] %></td>
                  <td><p><%= web_feedback['message'] %></p></td>
                  <td><%= l(web_feedback['created_at'].to_datetime, format: "%d.%m.%Y %H:%M") %></td>
                  <td><%= link_to 'Destroy', feedback_path(id: web_feedback['id'], model: 'feedbacks'), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
