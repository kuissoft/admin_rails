<div class="row">
  <div class="col-lg-12">
    <h3>Connections</h3>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="sorted_table">
            <thead>
              <tr>
                <th>USER </th>
                <th>CONTACT</th>
                <th>NICKNAME</th>
                <th>IS PENDING</th>
                <th>IS REJECTED</th>
                <th>IS REMOVED</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @connections.each do |connection| %>
                <tr>
                  <td><%= "#{connection.user.name} (#{connection.user.phone})" if connection.user%> (id: <%= connection.user_id %>)</td>
                  <td><%= "#{connection.contact.name} (#{connection.contact.phone})" if connection.contact %> (id: <%= connection.contact_id %>)</td>
                  <td><%= connection.nickname  %></td>
                  <td><%= connection.is_pending %></td>
                  <td><%= connection.is_rejected %></td>
                  <td><%= connection.is_removed  %></td>
                  <td><%= link_to 'Show', connection %></td>
                  <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
                  <td><%= link_to 'Destroy', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
        <%= link_to 'New Connection', new_connection_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
