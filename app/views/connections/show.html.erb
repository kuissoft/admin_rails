<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-asbestos">Connection</h3>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <p>
          <strong>User:</strong>
          <%= @connection.user.name if @connection.user%> (<%= @connection.user_id %>)
        </p>
        <p>
          <strong>Contact:</strong>
          <%= @connection.contact.name if @connection.contact %> (<%= @connection.contact_id %>)
        </p>
        <p>
          <strong>Nickname:</strong>
          <%= @connection.nickname %>
        </p>
        <p>
          <strong>Is pending:</strong>
          <%= @connection.is_pending %>
        </p>
        <p>
          <strong>Is rejected:</strong>
          <%= @connection.is_rejected %>
        </p>
        <p>
          <strong>Is removed:</strong>
          <%= @connection.is_removed %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to 'Edit', edit_connection_path(@connection), class: "btn btn-default" %>
        <%= link_to 'Back', connections_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
