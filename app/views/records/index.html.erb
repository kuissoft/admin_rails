<div class="row">
  <div class="col-lg-12">
    <h3>Records</h3>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">

          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Caller</th>
				<th>Assistant</th>
				<th>Created</th>
				<th>Answer</th>
				<th>Duration</th>
				<th>Ended by</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |record| %>
                <tr>
                  <td><%= record.id%></td>
                  <td><%= record.caller_id %></td>
				  <td><%= record.assistant_id %></td>

                  <td><%= link_to 'Destroy', record, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>           
                </tr>
              <% end -%>
            </tbody>
          </table>

      </div>
    </div>
  </div>
</div>
