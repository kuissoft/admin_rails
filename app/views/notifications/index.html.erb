<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-asbestos">RAPNS Notifications</h3>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">RAPNS NOTIFICATIONS</div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>DEVICE TOKEN</th>
                <th>ALERT</th>
                <th>DATA</th>
                <th>EXPIRY</th>
                <th>FAILED</th>
                <th>FAILED AT</th>
                <th>ERROR CODE</th>
                <th>ERROR DESCRIPTION</th>
                <th>DELIVER AFTER</th>
                <th>CREATED AT</th>
              </tr>
            </thead>
            <tbody>
              <% @notifications.each do |notification| %>
                <tr>
                  <td><%= notification.id%></td>
                  <td><%= notification.device_token %></td>
                  <td><%= notification.alert %></td>
                  <td><p><%= notification.data %></p></td>
                  <td><%= notification.expiry %></td>
                  <td><%= notification.failed %></td>
                  <td><%= notification.failed_at %></td>
                  <td><%= notification.error_code %></td>
                  <td><p><%= notification.error_description %></p></td>
                  <td><%= notification.deliver_after %></td>
                  <td><%= l(notification.created_at, format: "%d.%m.%Y %H:%M") %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      <div class="panel-body">RAPNS FEEDBACK</div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">  <tr>
            <thead>
              <tr>
                <th>ID</th>
                <th>DEVICE TOKEN</th>
                <th>FAILED AT</th>
                <th>CREATED AT</th>
                <th>APP</th>
              </tr>
            </thead>
            <tbody>
              <% @feedbacks.each do |feedback| %>
                <tr>
                  <td><%= feedback.id %></td>
                  <td><%= feedback.device_token %></td>
                  <td><%= feedback.failed_at %></td>
                  <td><%= l(feedback.created_at, format: "%d.%m.%Y %H:%M") %></td>
                  <td><%= feedback.app %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
