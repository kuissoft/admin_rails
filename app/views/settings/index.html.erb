<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-asbestos">Settings</h3>
  </div>
</div>

<%= link_to "Create new settings", new_setting_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Value</th>
    <th></th>
  </tr>
  <% @settings.each do |setting| %>
    <tr>
      <td><%= setting.name %></td>
      <td><p><%= raw setting.value %></p></td>
      <td><%= link_to "Edit", edit_setting_path(setting) %></td>
      <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end -%>
</table>





