<div class="row">
  <div class="col-lg-12">
    <h3 >Users</h3>
  </div>
</div>

<div id="twilio"></div>
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script>
  $(window).load(function() {
    $.getScript('dashboard/twilio.js');
  });
</script>

<div>
  Last hour <%= @users.where('last_sign_in_at >= ?',  1.hour.ago).count %>
  Last day <%= @users.where('last_sign_in_at >= ?',  Date.today).count %>
  Last 24h <%= @users.where('last_sign_in_at >= ?',  1.day.ago).count %>
  Last week <%= @users.where('last_sign_in_at >= ?',  1.week.ago).count %>
  Last month <%= @users.where('last_sign_in_at >= ?',  1.month.ago).count %>
  Total <%= @users.count %>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="sorted_table">
            <thead>
              <tr>
                <th></th>
          			<th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.photo.url(:x100), class: 'circular_images' %></td>
          				<td><%= user.id %></td>
                  <td><%= link_to user.name, user %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.email %></td>
                  <td><%= user.role %></td>
                  <td><%= link_to 'Show', user, class: 'btn btn-xs btn-default' %></td>
                  <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-default' %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
