<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-asbestos">User</h3>
  </div>
</div>
<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <p>
          <div class="imagefield">
			  <p>photo url: <%= @user.photo.url(:x300) %></p>
            <%= image_tag @user.photo.url(:x300), class: 'circular_images' %>
          </div>
        </p>

        <p>
          <strong>ID:</strong>
          <%= @user.id %>
        </p>

        <p>
          <strong>Name:</strong>
          <%= @user.name %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @user.phone %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <p>
          <strong>Role:</strong>
          <%= @user.role %>
        </p>

        <p>
          <strong>Last Online At:</strong>
          <%= @user.last_online_at.to_s(:datetime) if @user.last_online_at %>
        </p>

        <p>
          <strong>SMS sent:</strong>
          <%= @user.sms_count %>
        </p>

        <p>
          <strong>SMS resets:</strong>
          <%= @user.reset_count %>
        </p>

        

        <p>
          <%= link_to("Reset sms", reset_sms_user_path(id: @user.id), method: :put, class: 'btn btn-default') %>
        </p>

        <p>
          <%= link_to "Deauthenticate all devices", deauthenticate_user_path(id: @user.id, all: "1"), method: :put, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %>
        </p>
     </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">My Services</div>
      <div class="panel-body">
        <section id="services">
          <%= render 'services' %>
        </section>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">My Connections</div>
      <div class="panel-body">
        <section id="connections">
          <%= render 'connections' %>
        </section>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">My Devices</div>
      <div class="panel-body">
        <section id="devices">
          <%= render 'devices' %>
        </section>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to "Assign new token", expire_token_user_path(@user), method: "put", class: "btn btn-default" %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
        <%= link_to 'Back', users_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>