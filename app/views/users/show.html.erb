<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <strong>Authentication token:</strong>
  <%= @user.authentication_token %>
</p>

<section id="connections">
  <h1>My Connections</h1>
  <% @connections.each do |connection| %>
  <div class="connection_row">
    <div class="connection_header">
      <%= link_to @user.name, @user %> <%= get_relation(connection.id) %> <%= link_to connection.name, connection %> 
      <%= image_tag 'information.png', class: 'show_detail_button'%>
    </div>
    <div class="connection_detail">
      <%= raw connection_info(@user.get_connection(connection.id)) %>
      <%= raw connection_info(connection.get_connection(@user.id)) %>
    </div>
  </div>
  <% end -%>

</section>


<%= link_to "Assign new token", expire_token_user_path(@user), method: "put", class: "btn" %>

<%= link_to 'Edit', edit_user_path(@user), class: "btn" %>
<%= link_to 'Back', users_path %>
