<%= form_for(@user, html: {autocomplete: 'off'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: 'u_name'%>
  </div>

  <% if @user.admin? %>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.phone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, autocomplete: 'off' %>
  </div>
  <div class="field">
    <%= f.label :role %><br>
    <%= f.select :role, ['admin', 'user'] %>
  </div>
  <div class="actions">
    <%= f.submit('Update User', class: 'btn btn-primary') %>
  </div>
<% end %>


