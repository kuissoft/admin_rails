<h1>My Devices</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ONLINE</th>
        <th>USER ID</th>
        <th>UUID</th>
        <th>LANGUAGE</th>
        <th>VERIFICATION CODE</th>
        <th>INVALID VERIFICATIONS</th>
        <th>SMS SENT</th>
        <th>SMS RESETS</th>
        <th>RESENT</th>
        <th>RESENT AT</th>
        <th>APNS TOKEN</th>
        <th>AUTH TOKEN</th>
        <th>LAST AUTH TOKEN</th>
        <th>AUTH TOKEN UPDATED AT</th>
        <th>CONNECTION</th>
        <th>LAST ONLINE AT</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @devices.each do |device| %>
          <tr>
            <td><%= device.online ? raw('<i class="fa fa-circle"></i>') : raw('<i class="fa fa-circle-o"></i>') %></td>
            <td><%= device.user_id%></td>
            <td><%= device.uuid%></td>
            <td><%= device.language%></td>
            <td><%= device.verification_code %></td>
            <td><%= device.invalid_count %></td>
            <td><%= device.sms_count %></td>
            <td><%= device.reset_count %></td>
            <td><%= device.resent %></td>
            <td><%= device.resent_at.to_s(:datetime) if device.resent_at%></td>
            <td><%= device.token %></td>
            <td><%= device.auth_token %></td>
            <td><%= device.last_token %></td>
            <td><%= device.token_updated_at.to_s(:datetime) if device.token_updated_at%></td>
            <td><%= device.connection_type %></td>
            <td><%= device.last_online_at.to_s(:datetime) if device.last_online_at%></td>
            <td><%= link_to "Edit", edit_device_path(device), class: 'btn btn-xs btn-default' %></td>
            <td><%= link_to 'Destroy', device, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
            <td>
            <td>
              <%= link_to("Reset sms", reset_sms_device_path(id: device, return_back: 'user'), method: :put, class: 'btn btn-default') %>
            </td>
          </tr>
        <% end -%>
    </tbody>
  </table>
</div>

